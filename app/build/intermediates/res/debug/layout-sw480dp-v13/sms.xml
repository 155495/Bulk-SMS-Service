<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background" >

    <Button
        android:id="@+id/sendb"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:text="Send"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:background="@drawable/csv" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:text="CSV Contacts"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/smsf"
        android:layout_width="400dp"
        android:layout_height="180dp"
        android:layout_above="@+id/sendb"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="Enter The Message To Send Unlimited Person"
        android:textColorHint="#000000" />

</RelativeLayout><!-- From: file:/home/rajanmaurya/Android/Android%20Runing%20project/Bulk_SMS/Bulk-SMS-Service-final/app/src/main/res/layout-sw480dp/sms.xml -->